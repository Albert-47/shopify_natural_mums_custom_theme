<section class="banner-section">
    {%- if section.settings.title != blank -%}
        <h2 class="section__heading">{{ section.settings.title | escape }}</h2>
        <div style="font-family: 'Clicker Script', cursive;" class="subheading">{{ section.settings.subheading }}</div>
    {%- endif -%}

    <div class="w-100">
        <img src="{{- section.settings.banner | img_url: '3040x' -}}" style="width: 100%" alt="" srcset="">
    </div>
</section>


{% schema %}
    {
        "name": "Banner with Text",
        "class": "section-banner",
        "settings":[
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Sample Heading for your Banner"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Sub Heading",
                "default": "Sample Heading for your Banner"
            },
            {
                "type": "image_picker",
                "id": "banner",
                "label": "Banner"
            }
        ],
        "presets": [
            {
                "name": "Banner With Text",
                "settings": {}
            }
        ]
    }
{% endschema %}